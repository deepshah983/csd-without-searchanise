{"components/csd/blog/hero":"<article class=\"blog{{#if post.body}} full-post{{/if}} blog-card\">\r\n    <div class=\"blog-post-figure\">\r\n        {{#if post.thumbnail}}\r\n            <figure class=\"blog-thumbnail\" style=\"background-image: url({{getImage post.thumbnail 'blog_hero_size'}});\">\r\n                <a href=\"{{post.url}}\">\r\n                    <img class=\"lazyload\" data-sizes=\"auto\" src=\"{{cdn 'img/loading.svg'}}\" data-src=\"{{getImage post.thumbnail 'blog_hero_size'}}\" alt=\"{{post.thumbnail.alt}}\" title=\"{{post.thumbnail.alt}}\">\r\n                </a>\r\n            </figure>\r\n        {{/if}}\r\n    </div>\r\n\r\n    <div class=\"blog-post-body\">\r\n        <header class=\"blog-header\">\r\n            <div class=\"blog-tags\">\r\n            {{#if post.tags}}\r\n                <ul class=\"tags\">\r\n                    {{#each post.tags}}\r\n                    <li class=\"tag\">\r\n                        <a href=\"{{url}}\">{{name}}</a>\r\n                    </li>\r\n                    {{/each}}\r\n                </ul>\r\n            {{/if}}\r\n            </div>\r\n\r\n            <div class=\"blog-author\">{{#if post.author}}{{lang 'blog.posted_by' name=post.author}}{{/if}}</div>\r\n            <div class=\"blog-date\">{{post.date_published}}</div>\r\n            <h3 class=\"blog-title\">\r\n                <a href=\"{{post.url}}\">{{post.title}}</a>\r\n            </h3>\r\n        </header>\r\n\r\n        <div class=\"blog-post\">\r\n            {{#if post.body}}\r\n                {{{post.body}}}\r\n            {{else}}\r\n                {{{post.summary}}}\r\n                {{#if post.show_read_more}}\r\n                    &hellip; <p class=\"read-more\"><a href=\"{{url}}\"><strong>{{lang 'blog.read_more'}}</strong>\r\n                        <i class=\"icon\" aria-hidden=\"true\">\r\n                            <svg><use xlink:href=\"#icon-chevron-right\" /></svg>\r\n                        </i>\r\n                    </a></p>\r\n                {{/if}}\r\n            {{/if}}\r\n        </div>\r\n\r\n    </div>\r\n</article>\r\n"}
